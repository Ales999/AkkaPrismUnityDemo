<Button
	x:Class="AkkaPrismUnityDemo.Modules.Stocks.Views.StockToggleButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:AkkaPrismUnityDemo.Modules.Stocks.Views"
    xmlns:viewModels="clr-namespace:AkkaPrismUnityDemo.Modules.Stocks.ViewModels"
    mc:Ignorable="d" 
	d:DataContext="{d:DesignInstance viewModels:StockToggleButtonViewModel}"
	MinWidth="80"
	Margin="6"
    d:DesignHeight="300" d:DesignWidth="300"
	Command="{Binding ToggleStockCommand}"
	>
    <Grid>
		<Label Content="{Binding Path=ButtonText}"/>
    </Grid>
</Button>
